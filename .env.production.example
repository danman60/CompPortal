# CompPortal Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Next.js Public Environment Variables
NEXT_PUBLIC_APP_URL=http://YOUR_DROPLET_IP:3000

# Database - Supabase Pooler connection (port 6543) for production
# PgBouncer pooler required for DigitalOcean droplet (no IPv6 support)
# Replace YOUR_PASSWORD with your actual database password
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@aws-0-us-west-1.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true&connection_limit=1"

# Direct connection for Prisma migrations/introspection (port 5432)
# Used for migrations only - direct DB access
DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.cafugvuaatsgihrsmvvl.supabase.co:5432/postgres?sslmode=require"

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://cafugvuaatsgihrsmvvl.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# Node Environment
NODE_ENV=production
